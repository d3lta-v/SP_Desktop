{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "allowJs": true
    }
}